{
  "info": {
    "name": "API Productos JWT",
    "description": "Colección de Postman para probar la API de Productos con autenticación JWT",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "TOKEN",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Registro de Usuario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('TOKEN', response.data.token);",
                  "    console.log('Token guardado:', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@ejemplo.com\",\n  \"password\": \"password123\",\n  \"nombre\": \"Usuario\",\n  \"apellido\": \"Prueba\",\n  \"rol\": \"USER\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('TOKEN', response.data.token);",
                  "    console.log('Token guardado:', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@ejemplo.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Obtener Perfil",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/me",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Productos",
      "item": [
        {
          "name": "Listar Todos los Productos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/productos",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "productos"]
            }
          }
        },
        {
          "name": "Listar Productos con Filtros",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/productos?categoria=electronica&search=laptop&page=1&limit=5",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "productos"],
              "query": [
                {
                  "key": "categoria",
                  "value": "electronica"
                },
                {
                  "key": "search",
                  "value": "laptop"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Obtener Producto por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/productos/:id",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "productos", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "INSERTAR_ID_AQUI"
                }
              ]
            }
          }
        },
        {
          "name": "Crear Producto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Producto de Prueba\",\n  \"descripcion\": \"Este es un producto creado desde Postman\",\n  \"precio\": 299.99,\n  \"stock\": 15,\n  \"categoria\": \"electronica\",\n  \"imagen\": \"https://images.unsplash.com/photo-1505740420928-5e560c06d30e\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/productos",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "productos"]
            }
          }
        },
        {
          "name": "Actualizar Producto",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"precio\": 249.99,\n  \"stock\": 20\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/productos/:id",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "productos", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "INSERTAR_ID_AQUI"
                }
              ]
            }
          }
        },
        {
          "name": "Eliminar Producto (Soft Delete)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/productos/:id",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "productos", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "INSERTAR_ID_AQUI"
                }
              ]
            }
          }
        },
        {
          "name": "Eliminar Producto Permanentemente (ADMIN)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/productos/:id/permanent",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "productos", ":id", "permanent"],
              "variable": [
                {
                  "key": "id",
                  "value": "INSERTAR_ID_AQUI"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/health",
          "host": ["{{BASE_URL}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Root",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/",
          "host": ["{{BASE_URL}}"],
          "path": [""]
        }
      }
    }
  ]
}
